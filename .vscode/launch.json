{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AgenticLab Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AgenticLab.Web/bin/Debug/net10.0/AgenticLab.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AgenticLab.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7210;http://localhost:5210"
            }
        },
        {
            "name": "AgenticLab AppHost (Aspire)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AgenticLab.AppHost/bin/Debug/net10.0/AgenticLab.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AgenticLab.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "AgenticLab Demo (Console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AgenticLab.Demos/bin/Debug/net10.0/AgenticLab.Demos.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AgenticLab.Demos",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}
